{
    "defaultSeverity": "error",
    "extends": [
        "tslint-config-airbnb",
        "tslint-react",
        "tslint-config-prettier"
    ],
    "jsRules": {},
    "rules": {
        "max-line-length": false,
        "trailing-comma": false,
        "ter-indent": [
            true, 
            4, 
            {
                "SwitchCase": 1
            }
        ],
        "variable-name": false,
        "jsx-alignment": false,
        "jsx-equals-spacing": [true, "never"],
        "jsx-no-string-ref": true,
        "jsx-self-close": true,
        "jsx-wrap-multiline": true,
        "radix": false
    },
    "rulesDirectory": []
}